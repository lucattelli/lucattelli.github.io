<mvc:View
	controllerName="it.cyrius.mysignature.controller.Signature"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">

	<Page 
		title="{i18n>appTitle}"
		showNavButton="true"
		navButtonPress="onNavPress">
		<content>
			<MessageStrip text="{i18n>Signature.messageStrip}" type="Warning" class="sapUiMediumMarginBeginEnd sapUiMediumMarginTopBottom"/>
			<l:VerticalLayout width="100%">
				<Panel>
					<FlexBox 
						height="450px"
						alignItems="Center"
						justifyContent="Center">
						<core:HTML id="signatureHtmlContent"/>
					</FlexBox>
				</Panel>
			</l:VerticalLayout>
		</content>
	</Page>
</mvc:View>